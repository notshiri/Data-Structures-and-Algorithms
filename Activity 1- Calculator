#include <iostream>
using namespace std;

int main()
{
    int num1;
    int num2;
    char opt;

    cout << "Enter a number: ";
    cin >> num1;
    
    cout << "Enter another number: ";
    cin >> num2;
   
    cout << "Enter an operator: ";
    cin >> opt;

    switch (opt) {
        case '+':
        cout << "Result: " << num1 + num2;
        break;

        case '-':
        cout << "Result: " << num1 - num2;
        break;

        case '*':
        cout << "Result: " << num1 * num2;
        break;

        case '/':
        cout << "Result: " << num1 / num2;
        break;

        
    }
    return 0;

}
